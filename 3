#include <stdio.h>

int main() {
    int a;

    printf("Введите количество уровней ёлочки (a): ");
    scanf("%d", &a);

    if (a < 1) {
        printf("Количество уровней должно быть больше или равно 1.\n");
        return 1;
    }

    for (int i = 0; i < a; i++) {
        for (int b = 0; b < a - 1 - i; b++) {
            printf(" ");
        }
        for (int b = 0; b < 2 * i + 1; b++) {
            printf("*");
        }
        printf("\n");
    }

    for (int i = 0; i < a - 1; i++) {
        printf(" ");
    }
    printf("*\n");

    return 0;
}
